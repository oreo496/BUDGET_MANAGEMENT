# Database Configuration (MySQL default in settings)
DB_NAME=funder
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306

# Django Settings
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
ENCRYPTION_KEY=your-32-char-encryption-key-change-this
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# OpenAI API Key (for FunderBot chatbot)
OPENAI_API_KEY=your-openai-api-key-here

# Email (Optional)
# Console backend prints emails to the server console
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# To enable SMTP (works in DEBUG too), uncomment and set:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password
# EMAIL_USE_TLS=True
# EMAIL_USE_SSL=False
# DEFAULT_FROM_EMAIL=no-reply@your-domain.com
# EMAIL_TIMEOUT=30

# Base URL for links in emails
VERIFICATION_BASE_URL=http://localhost:8000
# SMS OTP via Twilio (optional)
# Get credentials from https://www.twilio.com/console
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=your_auth_token_here
# TWILIO_PHONE_NUMBER=+1234567890  # Your Twilio-provisioned phone number